<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!-- 默认块复制，可以在创建文件时指定实际的复制数。 -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <!-- 如果为false，则关闭权限检查，但所有其他行为都保持不变。 -->
   	<property>
	      <name>dfs.permissions.enabled</name>
	      <value>false</value>
  	</property>
    <!-- HDFS 块大小为 256MB（268435456），适用于大型文件系统。 -->
    <property>
        <name>dfs.blocksize</name>
        <value>16777216</value>
    </property>
</configuration>
